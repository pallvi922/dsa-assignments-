#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter size of matrix: ";
    cin >> n;

    int total = n*(n+1)/2;
    int sym[total];
    cout << "Enter lower triangular elements (including diagonal): ";
    for (int i = 0; i < total; i++) cin >> sym[i];

    cout << "Symmetric Matrix:" << endl;
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            if(i>=j) cout<< sym[i*(i+1)/2 + j] <<" ";
            else cout<< sym[j*(j+1)/2 + i] <<" ";
        }
        cout<<endl;
    }
    return 0;
}
