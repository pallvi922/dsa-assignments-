#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
};

Node* newNode(int data) {
    Node* temp = new Node;
    temp->data = data;
    temp->next = nullptr;
    return temp;
}

bool isCircular(Node* head) {
    if (head == nullptr)
        return true;

    Node* temp = head->next;
    while (temp != nullptr && temp != head) {
        temp = temp->next;
    }

    return (temp == head);
}

void display(Node* head) {
    Node* temp = head;
    while (temp != nullptr) {
        cout << temp->data << "->";
        temp = temp->next;
    }
    cout << "NULL" << endl;
}

int main() {
   
    Node* head = newNode(2);
    head->next = newNode(4);
    head->next->next = newNode(6);
    head->next->next->next = newNode(7);
    head->next->next->next->next = newNode(5);

    cout << "Linked List: ";
    display(head);

    if (isCircular(head))
        cout << "The linked list is CIRCULAR." << endl;
    else
        cout << "The linked list is NOT circular." << endl;

    return 0;
}
