#include <iostream>
using namespace std;

int main() {
    char infix[100], st[100], postfix[100];
    int top = -1, k = 0;
    cout << "Enter Infix: ";
    cin >> infix;

    for (int i = 0; infix[i] != '\0'; i++) {
        char c = infix[i];
        if ((c >= 'A' && c <= 'Z') || (c >= 'a' && c <= 'z')) {
            postfix[k++] = c;
        }
        else if (c == '(') {
            st[++top] = c;
        }
        else if (c == ')') {
            while (top != -1 && st[top] != '(') {
                postfix[k++] = st[top--];
            }
            top--;
        }
        else {  
            while (top != -1 && (st[top] == '*' || st[top] == '/' || st[top] == '+' || st[top] == '-')) {
                postfix[k++] = st[top--];
            }
            st[++top] = c;
        }
    }
    while (top != -1) {
        postfix[k++] = st[top--];
    }
    postfix[k] = '\0';

    cout << "Postfix: " << postfix;
}
